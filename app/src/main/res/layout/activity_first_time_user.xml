<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Edit Profile"
        android:gravity="center"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/subheader_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginTop="6dp"
            />
        <EditText
            android:id="@+id/EditTextName"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Email"/>
        <EditText
            android:id="@+id/EditTextEmail"
            android:layout_width="match_parent"
            android:inputType="none"
            android:textColorHint="@color/colorDarkGrey"
            android:editable="false"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Phone"/>
        <EditText
            android:id="@+id/EditTextPhone"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Home Address"/>

        <EditText
            android:id="@+id/EditTextAddress"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_height="wrap_content"/>

        <!--
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/EditTextAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>
        -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Company"/>
        <Spinner
            android:id="@+id/SpinnerCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"/>

        <Button
            android:id="@+id/button_save_info"
            android:layout_width="@dimen/medium_button_width"
            android:layout_height="@dimen/medium_button_height"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:background="@drawable/format_curved_edge_button_bw"
            android:text="Save"
            android:padding="@dimen/button_padding"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/medium_button_text_size" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>